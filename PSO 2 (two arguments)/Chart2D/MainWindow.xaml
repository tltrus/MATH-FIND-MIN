<Window x:Class="_Chart2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_Chart2D"
        mc:Ignorable="d"
        Title="Looking for a local minimum - Particle swarm optimization (PSO)" Width="750" Height="750" MouseWheel="Window_MouseWheel">
    <Grid Margin="5">
        <StackPanel>
            <WrapPanel>
                <Button x:Name="btnReset" Content="Reset" Margin="5" Click="btnReset_Click" Width="100"/>
                <Button x:Name="btnStart" Content="Start" Margin="5" Click="btnStart_Click" Width="100"/>
            </WrapPanel>
            <local:DrawingVisualClass x:Name="g" HorizontalAlignment="Center" VerticalAlignment="Center" Width="725" Background="Black" Height="676"/>
        </StackPanel>
    </Grid>
</Window>
